<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vvxc.skindetector">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/skin_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="Android:icon, android:theme">
        <activity
            android:name=".view.activity.MainActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.SelectInfoActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.PersonalActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.ShowPhotoActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".view.activity.PhotoListActivity"
            android:theme="@style/AppTheme.Dark" ></activity>
    </application>

</manifest>