<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.CardView
        android:id="@+id/select_info_card"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:id="@+id/boy_check"
                        android:src="@drawable/ic_check_red_48dp"/>
                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:src="@drawable/boy"
                        android:id="@+id/boy_img"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/girl_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:visibility="invisible"
                        android:src="@drawable/ic_check_red_48dp"/>
                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:id="@+id/girl_img"
                        android:src="@drawable/girl"/>
                </FrameLayout>
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:textColor="@color/oil"
                    android:textSize="16dp"
                    android:text="你认为你的肤质属于:"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:id="@+id/skin_type_group"
                    >
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/oil"
                        android:textColor="@color/oil"
                        android:id="@+id/radio_deny"
                        android:text="我不知道"/>
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/oil"
                        android:textColor="@color/oil"
                        android:text="中性皮肤"
                        android:id="@+id/radio_normal"
                        />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/oil"
                        android:textColor="@color/oil"
                        android:id="@+id/oil_radio"
                        android:text="油性皮肤" />
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/oil"
                        android:textColor="@color/oil"
                        android:id="@+id/radio_dry"
                        android:text="干性皮肤" />
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/oil"
                        android:textColor="@color/oil"
                        android:id="@+id/radio_sensitive"
                        android:text="敏感性皮肤" />
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/oil"
                        android:textColor="@color/oil"
                        android:id="@+id/radio_combination"
                        android:text="混合性皮肤" />
                </RadioGroup>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_complete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:padding="12dp"
                android:backgroundTint="@color/primary"
                android:text="完成"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>